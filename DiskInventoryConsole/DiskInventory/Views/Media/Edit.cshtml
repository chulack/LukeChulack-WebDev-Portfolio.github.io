<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">

    <div asp-validation-summary="All" class="text-danger">

    </div>

    <div class="form-group">
        <label asp-for="MediaName">
            Name of the Media
        </label>
        <input asp-for="MediaName" class="form-control" />


    </div>
    <div class="form-group">
        <label asp-for="ReleseDate">
            Date of Relese
        </label>
        <input asp-for="ReleseDate" type="date" class="form-control" />


    </div>
    <div>
        <label asp-for="GenreId">Genre Type</label>
        <select asp-for="GenreId" class="form-control">
            <option value="select a type">Select a Type</option>
            @foreach (Genre g in ViewBag.Genres)
            {
                <option value="@g.GenreId">@g.Description</option>

            }
        </select>
    </div>



    <div>
        <label asp-for="MediaTypeId">Media Type</label>
        <select asp-for="MediaTypeId" class="form-control">
            <option value="select a Media type">select a Media type</option>
            @foreach (MediaType m in ViewBag.MediaTypes)
            {
                <option value="@m.MediaTypeId">@m.Description</option>

            }
        </select>
    </div>


    <div>
        <label asp-for="StatusId">Genre Type</label>
        <select asp-for="StatusId" class="form-control">
            <option value="select a Status">Select a Status</option>
            @foreach (Status s in ViewBag.Statuses)
            {
                <option value="@s.StatusId">@s.Description</option>

            }
        </select>
    </div>

    <input type="hidden" asp-for="MediaId" />
    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="MediaIntersectiontable" asp-action="Index" class="btn btn-primary">Cancel</a>


</form>